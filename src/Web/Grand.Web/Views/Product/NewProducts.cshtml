@model IList<ProductOverviewModel>
@inject IPageHeadBuilder pagebuilder
@{
    Layout = "_TwoColumns";

    //title
    pagebuilder.AddTitleParts(Loc["Title.NewProducts"]);
}
@using Grand.Web.Models.Catalog;
<div class="page recently-added-products-page col-12 px-0">
    <h1 class="h2 generalTitle">@Loc["Products.NewProducts"]</h1>
    @if (Model.Any())
    {
        <b-form-row class="product-grid">
            @foreach (var product in Model)
            {
                <b-col lg="4" sm="6" cols="6" class="product-container mb-2">
                    <partial name="_CatalogProductView" model="product" />
                </b-col>
            }
        </b-form-row>
    }
</div>
